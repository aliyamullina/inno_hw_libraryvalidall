            "examples": [
                "google.com"
            ]
        },
        "ip": {
            "$id": "#/properties/ip",
            "type": "string",
            "title": "The ip schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "8.8.8.8"
            ]
        }
    },
    "additionalProperties": true
}